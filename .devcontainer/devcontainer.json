{
    "name": "ootm-wordpress",
    "dockerComposeFile": "./compose.yml",
    "service": "devcontainer",
    "runServices": [
        "devcontainer",
        "mariadb"
    ],
    "workspaceFolder": "/workspaces/ootm-wordpress",
    // Podman + devcontainers: disable the extra UID/GID rebasing step that tries to
    // rebuild FROM localhost/... (fails because it attempts to pull from a registry).
    "updateRemoteUserUID": false,
    "shutdownAction": "stopCompose",
    "remoteUser": "developer",
    // "updateContentCommand": "npm install",
    "customizations": {
        // Configure properties specific to VS Code.
        "vscode": {
            // Add the IDs of extensions you want installed when the container is created.
            "extensions": [
                "eamodio.gitlens",
                "foxundermoon.shell-format",
                "ms-azuretools.vscode-docker",
                "wdhongtw.gpg-indicator",
                "esbenp.prettier-vscode",
                "yzhang.markdown-all-in-one",
                "EditorConfig.EditorConfig",
                "HashiCorp.terraform",
                "DEVSENSE.phptools-vscode",
                "openai.chatgpt"
            ]
        }
    }
}