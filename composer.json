{
    "name": "orderofthemarshal/ootm-wordpress",
    "type": "project",
    "autoload": {
        "psr-4": {
            "WordpressCore\\": "wordpress/"
        }
    },
    "require": {
        "ext-mysqli": "*"
    },
    "extra": {
        "wordpress-install-dir": "web/wp"
    },
    "scripts": {
        "serve": "bash scripts/serve-nginx.sh",
        "ensure-content-dirs": [
            "mkdir -p web/wp-content/themes web/wp-content/plugins web/wp-content/uploads web/wp-content/mu-plugins static"
        ],
        "post-install-cmd": [
            "@ensure-content-dirs"
        ],
        "post-update-cmd": [
            "@ensure-content-dirs"
        ]
    }
}